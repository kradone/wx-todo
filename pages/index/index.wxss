/* pages/index/index.wxss */
.topNav{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  border-bottom: 1px solid #dcdcde;
  background-color: white;
}
.tabBar{
  width: 100%;
  display: flex;
}
.activeBar{
  color: #0066CC;
}
.topNavTab{
  width: 50%;
  line-height: 40px;
  display: flex;
  align-items: center;
  justify-content:center;
  font-size: 16px;
  transition: all 0.5s;
}
.activeLine{
  width: 50%;
  height: 3px;
  background-color: #0066CC;
  transition:  all 0.5s;
}
.activeRight{
  margin-left: 50%;
}
.listContainer{
  display: flex;
  width: 100%;
  margin-top: 10px;
  margin-bottom: 10px;
  background-color: #fcfcfc;
  align-items: center;
  padding: 10px;
  
}
.checkbox{
  margin-right: 5px;
}
.addNew{
  display: flex;
  width: 100%;
  background-color: #f5f5f7;
  align-items: center;
  justify-content:center;
  height: 60px;
  border-top: 1px solid #dcdcde;
}
.inputBox{
  width: 70%;
  height: 40px;
  border: solid 1px #dcdcde;
  border-radius: 5px;
  margin-left: auto;
  margin-right: auto;
  padding-left: 5px;
  background-color: #fcfcfc;
}
.inputBtn{
  line-height:40px;
  font-size:14px;
  width: 20%;
}